{
    "app-id": "org.kde.PortalTest",
    "runtime": "org.kde.Platform",
    "runtime-version": "master",
    "sdk": "org.kde.Sdk",
    "command": "portal-test-kde",
    "finish-args": [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=host",
        "--device=dri",
        "--env=QT_QPA_PLATFORM=flatpak",
        "--env=QT_LOGGING_RULES=qt.qpa.qflatpak*.debug=true"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "modules": [
        {
            "name": "portal-test-kde",
            "cmake": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/grulja/flatpak-portal-test-kde.git"
                }
            ]
        }
    ]
}
