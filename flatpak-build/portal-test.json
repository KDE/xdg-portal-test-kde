{
    "app-id": "org.kde.PortalTest",
    "runtime": "org.kde.Platform",
    "runtime-version": "master",
    "sdk": "org.kde.Sdk",
    "command": "portal-test-kde",
    "finish-args": [
        "--socket=x11"
    ],
    "build-options" : {
        "cflags": "-O2 -g",
        "cxxflags": "-O2 -g",
        "env": {
            "V": "1"
        }
    },
    "modules": [
        {
            "name": "knotifications",
            "cmake": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://anongit.kde.org/knotifications.git"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i s'/5.31/5.30/' CMakeLists.txt"
                    ]
                }
            ]
        },
        {
            "name": "portal-test",
            "cmake": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/grulja/flatpak-portal-test-kde.git"
                }
            ]
        }
    ]
}
